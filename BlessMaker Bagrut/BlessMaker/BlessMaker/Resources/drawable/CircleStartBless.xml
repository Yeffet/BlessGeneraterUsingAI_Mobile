<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item>

		<shape android:shape="oval">
			<solid android:color="@color/colorPrimary2"/>
			<stroke android:color="@color/colorPrimary3" android:width="5dp"/>
			<!-- Set the same value for both width and height to get a circular shape -->
			<size android:width="250dp" android:height="250dp"/>
			<padding android:left="30dp" android:top="30dp"
             android:right="30dp" android:bottom="30dp" />
			<gradient
	android:startColor="@color/colorPrimary"
	android:endColor="#e3bde5"
	android:gradientRadius="150" 
	android:type="radial"
        />
		</shape>
	</item>
</selector>